@model Order
<div class="container">
    <h2>Order Details</h2>

    <div class="row">
        <div class="col">          
            <dl class="row">
           
                <dt class="col-sm-4">Order Number:</dt>
                <dd class="col-sm-8">@Model.Number</dd>

                <dt class="col-sm-4">Order Date:</dt>
                <dd class="col-sm-8">@Model.Date</dd>

                <dt class="col-sm-4">Provider Name:</dt>
                <dd class="col-sm-8">@Model.Provider.Name</dd>
            </dl>
        </div>

        
    </div>

    <h2>Order Items</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Unit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Unit</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row">
        <div class="col-6">
            <a asp-action="Create" asp-route-flag="2" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
        </div>

        <div class="col-6">
            <a asp-action="DeleteConfirmation" asp-route-id="@Model.Id" class="btn btn-danger">Remove</a>
        </div>
    </div>
</div>