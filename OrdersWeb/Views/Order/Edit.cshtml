@model EditViewOrder
@{
    ViewData["Title"] = "Create";
}


<form method="post">
    <button asp-route-flag="1" asp-action="Create" type="submit" class="btn btn-primary">Add new Item</button>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label class="form-label" asp-for="Number"></label>
        <input class="form-control" asp-for="Number">
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Date"></label>
        <input class="form-control" asp-for="Date">
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="ProviderId"></label>
        <select asp-for="ProviderId" asp-items="@Model.ProvidersNameList" class="form-select">
            <option disabled selected>Providers</option>
        </select>
        <span asp-validation-for="ProviderId" class="text-danger"></span>
    </div>

    @for (int i = 0; i < Model.Items.Count; i++)
    {
        <h2>Item @(i + 1) </h2>
        <div class="mb-3">
            <label class="form-label" asp-for="Items[i].Name"></label>
            <input class="form-control" asp-for="Items[i].Name">
            <span asp-validation-for="Items[i].Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Items[i].Unit"></label>
            <input class="form-control" asp-for="Items[i].Unit">
            <span asp-validation-for="Items[i].Unit" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Items[i].Quantity"></label>
            <input class="form-control" asp-for="Items[i].Quantity">
            <span asp-validation-for="Items[i].Quantity" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button asp-route-index="@i" asp-action="Create" type="submit" class="btn btn-primary">Remove Item</button>
        </div>

    }
    <button asp-action="CreateFinal" type="submit" class="btn btn-primary">Submit</button>
</form>
